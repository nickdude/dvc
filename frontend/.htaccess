Options -MultiViews
RewriteEngine On

# Handle React Router routes
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^anurcards/(.*)$ /anurcards/index.html [QSA,L]

# Fallback for any other routes under anurcards
RewriteCond %{REQUEST_URI} ^/anurcards/
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /anurcards/index.html [QSA,L]